<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->
            <gradient
                android:startColor="#b6b2b1"
                android:centerColor="#b6b2b1"
                android:endColor="#b6b2b1"
                android:angle="270" />

            <!--邊框顏色、粗細-->
            <stroke
                android:width="15dp"
                android:color="#b6b2b1" />

            <!--圓角-->
            <corners android:radius="20dp" />

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>